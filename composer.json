{
    "name": "norel/currency-converter",
    "description": "Simple PHP Currency Converter with Tests and CI",
    "type": "project",
    "license": "MIT",
    "autoload": {
    "psr-4": {
        "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "norel",
            "email": "norel78@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.84"
    },
    "scripts": {
       "cs:fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
       "cs:check": "php-cs-fixer fix --dry-run --config=.php-cs-fixer.dist.php",
        "test": "phpunit --configuration phpunit.xml",
    "phpstan": "phpstan analyse --configuration phpstan.neon",
    "phpstan:level0": "phpstan analyse --configuration phpstan.neon --level 0",
    "phpstan:level1": "phpstan analyse --configuration phpstan.neon --level 1",
    "phpstan:level2": "phpstan analyse --configuration phpstan.neon --level 2",
    "phpstan:level3": "phpstan analyse --configuration phpstan.neon --level 3",
    "phpstan:level4": "phpstan analyse --configuration phpstan.neon --level 4",
    "phpstan:level5": "phpstan analyse --configuration phpstan.neon --level 5",
    "phpstan:level6": "phpstan analyse --configuration phpstan.neon --level 6",
    "phpstan:level7": "phpstan analyse --configuration phpstan.neon --level 7",
    "phpstan:level8": "phpstan analyse --configuration phpstan.neon --level 8",
    "phpstan:level9": "phpstan analyse --configuration phpstan.neon --  level 9",
    "phpstan:levelmax": "phpstan analyse --configuration phpstan.neon --level max"
    }
}
